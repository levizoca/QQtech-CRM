<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styleLogin.css">
    <link rel="stylesheet" href="/base.css">
    <title>Login</title>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>

<body>
    <div class="background">
        <header class="header">
            <input type="checkbox" id="check">
            <label for="check">
                <i class="fas fa-bars" id="btn"></i>
                <i class="fas fa-times" id="cancel"></i>
            </label>
            <div class="sidebar">
                <header>
                    <h3>Bem-Vindo</h3><b></b>
                </header>
                <a href="/crm/home">
                    <i class="fas fa-home"></i>
                    <span>PÃ¡gina inicial</span>
                </a>
                <a href="/colaborador/visualizar">
                    <i class="fas fa-user-alt"></i>
                    <span>Colaboradores</span>
                </a>
                <a href="/visualizar/crm">
                    <i class="fas fa-stream"></i>
                    <span>Visualizar CRM</span>
                </a>
                <a href="/cadastro/crm">
                    <i class="fas fa-stream"></i>
                    <span>Criar CRM</span>
                </a>
                <a href="/login">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Sair</span>
                </a>
            </div>
        </header class="masthead">
        <div class="container">
            <div class="loginForm">
                <img class="logo" src="/logo.png" alt="">
                <form class="form">
                    <label for="Login" class="formLabel">E-mail:</label><br>
                    <input placeholder="  E-mail" name="email" type="text" class="loginInput"><br><br>
                    <label placeholder="Senha" for="Senha" class="formLabel">Senha:</label><br>
                    <input placeholder="  Senha" name="senha" type="password" class="loginInput"><br><br> 
                    <a href="">Esqueci minha senha</a><br>     
            
                    <input type="submit" value="Entrar" class="botaoEntrar">
       
                </form>
            </div>
        </div>
    </div>
</body>

<script>
        const formEl = document.querySelector('.form');

        formEl.addEventListener('submit', (event) => {
            event.preventDefault();

            const formData = new FormData(formEl);
            const data = Object.fromEntries(formData);

            fetch('http://localhost:3000/auth/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => response.json())
                .then(data => console.log(data))
                .then((response) => {
                    alert('Login realizado com sucesso!');
                    window.location.href = '/colaborador/visualizar';
                })
                .catch(error => console.log(error));
        });
</script>

</html>