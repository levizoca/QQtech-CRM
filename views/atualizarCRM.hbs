    <link rel="stylesheet" href="/styleAtualizarCRM.css">
    <link rel="stylesheet" href="/base.css">
    <title>Atualizar CRM</title>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>

<body>
    <div class="background-1">
        <header class="header">
            <input type="checkbox" id="check">
            <label for="check">
                <i class="fas fa-bars" id="btn"></i>
                <i class="fas fa-times" id="cancel"></i>
            </label>
            <div class="sidebar">
                <header>
                    <h3>Bem-Vindo</h3><b></b>
                </header>
                <a href="/crm/home">
                    <i class="fas fa-home"></i>
                    <span>Página inicial</span>
                </a>
                <a href="/colaborador/visualizar">
                    <i class="fas fa-user-alt"></i>
                    <span>Colaboradores</span>
                </a>
                <a href="/visualizar/crm">
                    <i class="fas fa-stream"></i>
                    <span>Visualizar CRM</span>
                </a>
                <a href="/cadastro/crm">
                    <i class="fas fa-stream"></i>
                    <span>Criar CRM</span>
                </a>
                <a href="/login">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Sair</span>
                </a>
            </div>
        </header class="masthead">

        <br>
        <h1 style="text-align: center; font-family: Arial, Helvetica, sans-serif;">Atualizar CRM</h1>
        <div class="container">
            <div class="cadastroForm">
                <form action="">
